@model Shopping.Models.ProductCategory

@{
    ViewData["Title"] = "新增產品類別";
}

<h1 class="text-primary">新增產品類別</h1>
<hr />

<div class="card mt-4">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- 類別名稱輸入框 -->
            <div class="mb-3">
                <label asp-for="CategoryName" class="form-label fw-bold">類別名稱</label>
                <input asp-for="CategoryName" class="form-control" placeholder="請輸入產品類別名稱" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <!-- 按鈕區域 -->
            <div class="mt-3">
                <button type="submit" class="btn btn-success">新增</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">返回列表</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
