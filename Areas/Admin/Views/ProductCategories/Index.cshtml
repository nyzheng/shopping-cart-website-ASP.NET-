@model IEnumerable<Shopping.Models.ProductCategory>

@{
    ViewData["Title"] = "產品類別管理";
}

<h1 class="text-primary">產品類別列表</h1>

<p>
    <a asp-action="Create" class="btn btn-success">新增類別</a>
</p>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.CreateDate)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">編輯</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">詳細資訊</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
