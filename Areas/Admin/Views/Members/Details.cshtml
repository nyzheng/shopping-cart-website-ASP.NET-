@model Shopping.Models.Member

@{
    ViewData["Title"] = "帳號內容";
}

<div class="container mt-5">
    <h4 class="mb-4">帳號內容</h4>
    <hr />
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <dl class="row">
                <!-- 帳號 -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Account)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Account)
                </dd>

                <!-- 密碼 -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Password)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Password)
                </dd>

                <!-- 姓名 -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <!-- 電子郵件 -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <!-- 創建日期 -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CreateDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CreateDate)
                </dd>
            </dl>
        </div>
    </div>

    <!-- 編輯與返回按鈕 -->
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">修改資訊</a>
        <a asp-action="Index" class="btn btn-secondary">回到列表</a>
    </div>
</div>
