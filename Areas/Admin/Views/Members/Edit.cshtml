@model Shopping.Models.Member

@{
    ViewData["Title"] = "修改帳號";
}

<div class="container mt-5">
    <h4 class="mb-4">修改帳號</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreateDate" />
                <input type="hidden" asp-for="Password" />

                <!-- 帳號 -->
                <div class="form-group mb-3">
                    <label asp-for="Account" class="form-label">帳號</label>
                    <input asp-for="Account" class="form-control" placeholder="請輸入帳號" />
                    <span asp-validation-for="Account" class="text-danger"></span>
                </div>

                <!-- 密碼 -->
                <div class="form-group mb-3">
                    <label for="newPassword" class="form-label">密碼</label>
                    <input type="password" id="newPassword" name="newPassword" class="form-control" placeholder="保持空白以不修改密碼" />
                    <small class="text-muted">密碼不修改請保持空白</small>
                </div>

                <!-- 姓名 -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">姓名</label>
                    <input asp-for="Name" class="form-control" placeholder="請輸入姓名" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- 郵箱 -->
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">電子郵件</label>
                    <input asp-for="Email" class="form-control" placeholder="請輸入電子郵件" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- 提交按鈕 -->
                <div class="form-group mb-3">
                    <input type="submit" value="儲存" class="btn btn-primary w-100" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-secondary">返回列表</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
